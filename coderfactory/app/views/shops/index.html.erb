<p id="notice"><%= notice %></p>

<h1 class="heading">Listing Shops</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tagline</th>
      <th>Address</th>
      <th>Website</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.tagline %></td>
        <td><%= shop.address %></td>
        <td><%= shop.website %></td>
        <td><%= shop.phone %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

